<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewDoctor"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_not_found" />

    <TextView
        android:id="@+id/textViewNombreDoctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Dr. Nombre"
        android:textSize="13dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/textViewEspecialidadDoctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Especialidad"
        android:textSize="13dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:layout_marginEnd="10dp"/>

    <Button
        android:id="@+id/buttonHoraCita"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="10:00 AM"
        android:textSize="11dp"
        android:background="@drawable/shape_hora_cita_button"/>
</LinearLayout>
