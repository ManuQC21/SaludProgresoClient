<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TabLayout para las pestañas -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCitas"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Pestaña de Citas Vigentes -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCitasVigentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citas Vigentes" />

        <!-- Pestaña de Citas Vencidas -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCitasVencidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citas Vencidas" />
    </com.google.android.material.tabs.TabLayout>

    <!-- FrameLayout como contenedor de fragmentos -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
